{
	"compilerOptions": {
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,		
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "client",
		"outDir": "out/client",
		"lib": [ "es2016" ],
		"sourceMap": true
	},
	"exclude": [
		"node_modules",
		"server"
	]
}