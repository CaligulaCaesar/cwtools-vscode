{
    "name": "cwtools-vscode",
    "displayName": "CWTools - Paradox Language Services",
    "private": true,
    "description": "Paradox Interactive scripting file support using CWTools",
    "author": "Dayshine",
    "license": "MIT",
    "version": "0.6.6",
    "preview": true,
    "publisher": "tboby",
    "qna": "https://forum.paradoxplaza.com/forum/index.php?threads/tool-cwtools-a-mod-validating-extension-for-vs-code.1066033/",
    "repository": {
        "type": "git",
        "url": "https://github.com/tboby/cwtools-vscode"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "keywords": [
        "paradox",
        "stellaris"
    ],
    "activationEvents": [
        "onLanguage:paradox",
        "onLanguage:stellaris",
        "onLanguage:hoi4",
        "onLanguage:eu4"
    ],
    "main": "./out/client/extension",
    "files": [
        "./src/Main/bin/Debug/netcoreapp2.0/Main.dll",
        "./out",
        "./embedded"
    ],
    "contributes": {
        "commands": [
            {
                "command": "outputerrors",
                "title": "Write errors to file",
                "category": "cwtools"
            },
            {
                "command": "genlocall",
                "title": "Generate missing loc for all files",
                "category": "cwtools"
            },
            {
                "command": "reloadrulesconfig",
                "title": "Reload config rules",
                "category": "cwtools"
            },
            {
                "command": "cwtools.setCache",
                "title": "Generate cache",
                "category": "cwtools"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "CWTools configuration",
            "properties": {
                "cwtools.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the language server."
                },
                "cwtools.localisation.languages": {
                    "scope": "window",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "English",
                            "French",
                            "German",
                            "Spanish",
                            "Russian",
                            "Braz_Por",
                            "Polish"
                        ]
                    },
                    "default": [
                        "English"
                    ],
                    "description": "The list of languages to validate localisation for.",
                    "uniqueItems": true
                },
                "cwtools.errors.vanilla": {
                    "scope": "window",
                    "type": "boolean",
                    "default": "false",
                    "description": "Whether or not to show errors for vanilla files"
                },
                "cwtools.errors.ignore": {
                    "scope": "window",
                    "type": "array",
                    "description": "Error codes to ignore, list of IDs",
                    "uniqueItems": true
                },
                "cwtools.errors.ignorefiles": {
                    "scope": "window",
                    "type": "array",
                    "description": "Files to ignore errors from, list of file names",
                    "uniqueItems": true,
                    "default": [
                        "README.txt",
                        "credits.txt",
                        "credits_l_simp_chinese.txt",
                        "reference.txt",
                        "startup_info.txt"
                    ]
                },
                "cwtools.experimental": {
                    "scope": "window",
                    "type": "boolean",
                    "default": "false",
                    "description": "Whether or not to enable experimental features"
                },
                "cwtools.experimental_completion": {
                    "scope": "window",
                    "type": "boolean",
                    "default": "false",
                    "description": "Whether or not to enable experimental completion",
                    "deprecationMessage": "This feature is now enabled for all users"
                },
                "cwtools.rules_version": {
                    "scope": "application",
                    "type": "string",
                    "enum": [
                        "stable",
                        "latest",
                        "none"
                    ],
                    "default": "stable",
                    "description": "Which version of rules to auto-update to"
                }
            }
        },
        "languages": [
            {
                "id": "stellaris",
                "aliases": [
                    "",
                    "paradox",
                    "pdxscript"
                ],
                "extensions": [
                    "txt",
                    "gui",
                    "gfx",
                    "asset",
                    "cwt"
                ],
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    "**/stellaris/**/*.txt",
                    "**/stellaris/**/*.gui",
                    "**/stellaris/**/*.gfx",
                    "**/stellaris/**/*.asset"
                ]
            },
            {
                "id": "hoi4",
                "aliases": [
                    "",
                    "paradox",
                    "pdxscript"
                ],
                "extensions": [
                    "txt",
                    "gui",
                    "gfx",
                    "asset",
                    "cwt"
                ],
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    "**/hearts of iron iv/**/*.txt",
                    "**/hearts of iron iv/**/*.gui",
                    "**/hearts of iron iv/**/*.gfx",
                    "**/hearts of iron iv/**/*.asset"
                ]
            },
            {
                "id": "eu4",
                "aliases": [
                    "",
                    "paradox",
                    "pdxscript"
                ],
                "extensions": [
                    "txt",
                    "gui",
                    "gfx",
                    "asset",
                    "cwt"
                ],
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    "**/europa universalis iv/**/*.txt",
                    "**/europa universalis iv/**/*.gui",
                    "**/europa universalis iv/**/*.gfx",
                    "**/europa universalis iv/**/*.asset"
                ]
            }
        ],
        "snippets": [
            {
                "language": "stellaris",
                "path": "./snippets/paradox.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "npm": "^6.4.0",
        "simple-git": "^1.106.0",
        "vscode": "^1.1.21",
        "vscode-languageclient": "^5.0.1"
    },
    "devDependencies": {
        "@types/node": "^8.0.47",
        "@types/mocha": "^2.2.42"
    },
    "extensionPack": [
        "tboby.paradox-syntax"
    ]
}
