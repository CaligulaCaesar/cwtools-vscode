{
    "name": "cwtools-vscode",
    "displayName": "Paradox Language Services with CWTools",
    "private": true,
    "description": "Paradox Interactive file support using CWTools",
    "author": "Dayshine",
    "license": "MIT",
    "version": "0.1.17",
    "preview": true,
    "publisher": "tboby",
    "repository": {
        "type": "git",
        "url": "https://github.com/tboby/cwtools-vscode"
    },
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "keywords": [
        "paradox",
        "stellaris"
    ],
    "activationEvents": [
        "onLanguage:paradox"
    ],
    "main": "./out/client/extension",
    "files": [
        "./src/Main/bin/Debug/netcoreapp2.0/Main.dll",
        "./out"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "CWTools configuration",
            "properties": {
                "cwtools.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the language server."
                },
                "cwtools.localisation.languages": {
                    "scope": "window",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "English",
                            "French",
                            "German",
                            "Spanish",
                            "Russian",
                            "Braz_Por",
                            "Polish"
                        ]
                    },
                    "default": [
                        "english"
                    ],
                    "description": "The list of languages to validate localisation for.",
                    "uniqueItems": true
                },
                "cwtools.errors.vanilla": {
                    "scope": "window",
                    "type": "boolean",
                    "default": "false",
                    "description": "Whether or not to show errors for vanilla files"
                }
            }
        },
        "languages": [
            {
                "id": "paradox",
                "aliases": [
                    "",
                    "paradox"
                ],
                "extensions": [
                    "txt"
                ],
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    "**/stellaris/**/*.txt"
                ]
            }
        ],
        "snippets": [
            {
                "language": "paradox",
                "path": "./snippets/paradox.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode": "^1.1.10",
        "vscode-languageclient": "^3.5.0"
    },
    "devDependencies": {
        "@types/node": "^8.0.47"
    }
}