{
    "name": "cwtools-vscode",
    "displayName": "CWTools - Paradox Language Services",
    "private": true,
    "description": "Paradox Interactive scripting file support using CWTools",
    "author": "Dayshine",
    "license": "MIT",
    "version": "0.4.23",
    "preview": true,
    "publisher": "tboby",
    "qna": "https://forum.paradoxplaza.com/forum/index.php?threads/tool-cwtools-a-mod-validating-extension-for-vs-code.1066033/",
    "repository": {
        "type": "git",
        "url": "https://github.com/tboby/cwtools-vscode"
    },
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "keywords": [
        "paradox",
        "stellaris"
    ],
    "activationEvents": [
        "onLanguage:paradox"
    ],
    "main": "./out/client/extension",
    "files": [
        "./src/Main/bin/Debug/netcoreapp2.0/Main.dll",
        "./out"
    ],
    "contributes": {
        "commands": [
            {
                "command": "outputerrors",
                "title": "Write errors to file",
                "category": "cwtools"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "CWTools configuration",
            "properties": {
                "cwtools.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the language server."
                },
                "cwtools.localisation.languages": {
                    "scope": "window",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "English",
                            "French",
                            "German",
                            "Spanish",
                            "Russian",
                            "Braz_Por",
                            "Polish"
                        ]
                    },
                    "default": [
                        "English"
                    ],
                    "description": "The list of languages to validate localisation for.",
                    "uniqueItems": true
                },
                "cwtools.errors.vanilla": {
                    "scope": "window",
                    "type": "boolean",
                    "default": "false",
                    "description": "Whether or not to show errors for vanilla files"
                },
                "cwtools.errors.ignore": {
                    "scope": "window",
                    "type": "array",
                    "description": "Error codes to ignore, list of IDs",
                    "uniqueItems": true
                },
                "cwtools.errors.ignorefiles": {
                    "scope": "window",
                    "type": "array",
                    "description": "Files to ignore errors from, list of file names",
                    "uniqueItems": true,
                    "default": [
                        "README.txt",
                        "credits.txt",
                        "credits_l_simp_chinese.txt",
                        "reference.txt",
                        "startup_info.txt"
                    ]
                },
                "cwtools.experimental": {
                    "scope": "window",
                    "type": "boolean",
                    "default": "false",
                    "description": "Whether or not to enable experimental features"
                }
            }
        },
        "languages": [
            {
                "id": "paradox",
                "aliases": [
                    "",
                    "paradox"
                ],
                "extensions": [
                    "txt",
                    "gui",
                    "gfx",
                    "asset"
                ],
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    "**/stellaris/**/*.txt",
                    "**/stellaris/**/*.gui",
                    "**/stellaris/**/*.gfx",
                    "**/stellaris/**/*.asset"
                ]
            }
        ],
        "snippets": [
            {
                "language": "paradox",
                "path": "./snippets/paradox.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode": "^1.1.17",
        "vscode-languageclient": "^4.1.3"
    },
    "devDependencies": {
        "@types/node": "^8.0.47",
        "@types/mocha": "^2.2.42"
    }
}